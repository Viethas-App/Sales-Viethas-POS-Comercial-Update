{
  "name": "Sales-Viethas-POS",
  "description": "The Sales POS App from Viethas",
  "version": "1.0.0",
  "main": "./build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Viethas-App/Sales-Viethas-POS-Comercial-Update.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "publish": "source ~/.zshenv && npm run build && electron-builder build --windows --mac --linux --ia32 --x64 --publish always",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows-32": "npm run build && electron-builder build --windows --ia32",
    "electron:build-windows-64": "npm run build && electron-builder build --windows --x64",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "electron:build-linux": "npm run build && electron-builder build --linux --x64"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1",
    "@types/fs-extra": "^9.0.7",
    "electron-log": "^4.3.5",
    "electron-updater": "4.3.9"
  },
  "devDependencies": {
    "electron": "10.4.7",
    "electron-builder": "22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": {
    "name": "Viethas",
    "url": "http://viethas.com/",
    "email": "huyleduc81@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.viethas.salespos",
    "productName": "Sales-Viethas-POS",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "artifactName": "${productName}-${version}-mac.${ext}",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./assets/appIcon.png"
    },
    "win": {
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
      "target": "nsis",
      "icon": "./assets/appIcon.ico"
    },
    "linux": {
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "target": "AppImage",
      "icon": "./assets/appIcon.png"
    }
  }
}
